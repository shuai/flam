<p id="notice"><%= notice %></p>

ID: <%= @package.id %> <br>
Location: <%= @package.location %> <br>

<% if @package.raw_videos.nil? %>
    <h4>This package doesn't include video files.</h4>
<% else %>
    <h4>Videos</h4>
    <table>
    <tr>
    <td>Title</td>
    <td>bitrate(kbps)</td>
    <td>format</td>
    <td>duration(mins)</td>
    <td>size(M)</td>
    </tr>
    <% @package.raw_videos.each do |video| %>
        <tr>
        <td><%= link_to video.title, [:admin, video] %></td>
        <td><%= video.bitrate.to_i/1024 %></td>
        <td><%= video.format %></td>
        <td><%= video.duration/60 %> </td>
        <td><%= video.size.to_i/1024/1024 %></td>
        </tr>
    <% end %>
    </table>
<% end %>

<br>
<%= link_to 'Back', admin_root_path %>
